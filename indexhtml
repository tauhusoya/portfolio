  <script>
    document.querySelectorAll('.fade-in').forEach(el => {
      const observer = new IntersectionObserver(([entry]) => {
        if (entry.isIntersecting) el.classList.add('opacity-100');
      }, { threshold: 0.1 });
      observer.observe(el);
    });
